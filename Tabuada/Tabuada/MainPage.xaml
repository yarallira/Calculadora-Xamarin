<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tabuada.MainPage">

    <StackLayout>        
            <Label Text="Tabuada" HorizontalOptions="Center" FontSize="Large"/>
        <Entry x:Name="Numero" Keyboard="Numeric" Placeholder="Informe o número da taboada" />
        <Button x:Name="btCalcular" Text="Executar" Clicked="btCalcular_Clicked"/>
        <ListView x:Name="tabuada" />
    </StackLayout>

</ContentPage>
